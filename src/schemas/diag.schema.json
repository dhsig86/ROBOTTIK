{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robotto.local/schemas/diag.schema.json",
  "title": "Schema de Base Clínica por Área (diag_<area>.json)",
  "type": "object",
  "required": ["version", "area", "intake", "dx"],
  "properties": {
    "version": {
      "type": "string"
    },
    "area": {
      "type": "string",
      "enum": ["ouvido", "nariz", "garganta", "pescoco"]
    },
    "intake": {
      "type": "object",
      "required": ["symptoms", "modifiers"],
      "properties": {
        "symptoms": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_\\.]+$"
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "aliases": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "uniqueItems": true,
                "default": []
              },
              "weights": {
                "type": "number",
                "minimum": 0,
                "default": 1.0
              }
            },
            "additionalProperties": false
          },
          "uniqueItems": true
        },
        "modifiers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_\\.]+$"
              },
              "type": {
                "type": "string",
                "enum": [
                  "boolean",
                  "ordinal",
                  "categorical",
                  "number",
                  "string"
                ]
              },
              "levels": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "unit": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "dx": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_\\.]+$" },
          "global_id": { "type": "string", "pattern": "^[a-z0-9_\\.]+$" },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true,
            "default": []
          },
          "label": { "type": "string", "minLength": 1 },
          "pretest": { "type": "number", "minimum": 0, "maximum": 1 },

          "criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "if": {
                  "oneOf": [
                    {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "pattern": "^[a-z0-9_\\.]+$"
                      }
                    },
                    { "type": "string", "pattern": "^[a-z0-9_\\.]+$" }
                  ]
                },
                "lr+": { "type": "number" },
                "lr-": { "type": "number" },
                "weight": { "type": "number" }
              },
              "required": ["if"]
            }
          },

          "heuristics": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "when": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string", "pattern": "^[a-z0-9_\\.]+$" }
                },
                "boost": { "type": "number" }
              },
              "required": ["when", "boost"]
            },
            "default": []
          },

          "red_flags": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[a-z0-9_\\.]+$" },
            "default": []
          }
        },
        "required": ["id", "label", "pretest", "criteria"]
      }
    },

    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "multipliers": {
            "type": "object",
            "additionalProperties": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          }
        },
        "additionalProperties": false
      },
      "default": {}
    },
    "via_atendimento": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "enum": [
          "ambulatorio_rotina",
          "telemedicina",
          "emergencia_geral",
          "emergencia_especializada"
        ]
      },
      "default": {}
    }
  },
  "additionalProperties": false
}
